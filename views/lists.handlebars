<!DOCTYPE html>
<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <link rel="stylesheet" href="../css/style.css">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@500&display=swap" rel="stylesheet">


    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <!--first row for top 'header buffer'-->
    <div class="row" id="top-row-buffer"></div>

    <!--Container to hold formatting below-->
    <div class="container">

    <!--second row for "Add List" text-->
        <div class="row">
            <h2 id="lists-title">Add A List</h2>
        </div>
    
    <!--third row for entering a name to create a list-->
        <div class="row">
            <div class="input-field col s9">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Add Name Here</label>
            </div>
            <a class="waves-effect waves-light btn col s3">Create List</a>
        </div>

    <!--fourth row for "My Lists" text-->
        <div class="row">
            <h2 id="lists-title">My Lists</h2>
        </div>


    <!--fifth row for unordered list to generate data from ListMembers table-->
        <ul class="list-names">
            {{#each listmembers}}
            <li>
                {{this.name}}
                <a class="waves-effect waves-light btn" id="add-to-list-btn">Add to List</a>
                <a class="waves-effect waves-light btn red darken-1" id="delete-btn">Delete</a>
            </li>
            {{/each}}
        </ul>

    </div>
    <p id="api-results">API RESULTS DISPLAY HERE PLZ</p>
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
</body>

</html>